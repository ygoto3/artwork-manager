{
  "name": "artwork-manager",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.1.3"
  },
  "main": "src/app.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "start": "pm2 start process.json",
    "start:dev": "DEBUG=\"artwork:*\" node build/app.js",
    "stop": "pm2 stop artwork-manager",
    "build": "yarn build:nginx && yarn build:server && yarn build:client",
    "build:server": "mkdir -p build && mkdir -p uploads/artworks && BABEL_ENV=server babel src --out-dir build --source-maps",
    "build:nginx": "make nginx",
    "build:client": "webpack",
    "dev:server": "mkdir -p build && BABEL_ENV=server babel src --watch --out-dir build --source-maps",
    "dev:server:monitor": "DEBUG=\"artwork:*\" nodemon --inspect build/app.js",
    "dev:client": "webpack --watch",
    "watch": "mkdir -p build && babel src --watch --out-dir build",
    "test": "jest",
    "type": "flow",
    "lint": "eslint src",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "static": "mkdir -p build/static && cp -r assets/static/* build/static"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "isomorphic-fetch": "^2.2.1",
    "mongoose": "^4.11.1",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "pm2": "^2.6.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-flow-types": "^0.1.1",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-config": "^1.0.0-beta.3",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-saga": "^0.15.5",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "devDependencies": {
    "@storybook/addon-chapters": "^0.6.2",
    "@storybook/addon-info": "^3.1.6",
    "@storybook/react": "^3.1.8",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-plugin-flow-react-proptypes": "^3.4.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-import-export": "^1.0.2",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "eslint": "3.19.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "flow-bin": "^0.49.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "postcss-cssnext": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.1.0"
  },
  "jest": {
    "transform": {
      "\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
